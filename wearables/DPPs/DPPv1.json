{
    "name": "Wearables aggregation",
    "version": "0.1.0",
    "groups": {
        "AllWearables": {
            "soIds": [PLACEHOLDER],
            "stream": "position"
        }
    },
    "streams": {
        "aggregate": {
            "channels": {
                "x": {
                    "current-value": "{$AllWearables.channels.x.current-value}",
                    "type": "number",
                    "unit": "cartesian"
                },
                "y": {
                    "current-value": "{$AllWearables.channels.y.current-value}",
                    "type": "number",
                    "unit": "cartesian"
                },
                "id": {
                    "current-value": "{$AllWearables.channels.id.current-value}",
                    "type": "number",
                    "unit": "identifier"
                }
            }
        }
    }
}

